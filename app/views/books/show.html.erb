<main>
  <div class="contaner">
    <div class="row">
      
      <div class="col-md-3">
        <%= render 'users/info', user: @user %>
        <%= render 'books/new', book: @book_new %>
      </div>
      
      
      <div class="col-md-8 offset -md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
             
              <td>
              <%= link_to user_path(@book.user), class: 'link' do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg" %>
                <%= @book.user.name %>
              <% end %>
              </td>
              
              <td>
              <%= link_to book_path(@book), class: 'link' do %>
                <%= @book.title %>
              <% end %>
              </td>
              
              <td><%= @book.body %></td>
              
              <% if current_user.id == @book.user_id %>
              <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
              
            </tr>
          </tbody>
        </table>  
      </div>
      
      
    </div>
  </div>
</main>