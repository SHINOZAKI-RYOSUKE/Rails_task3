<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>opinion</th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
     <%#イメージもリンク化%>
     <td><%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg" %></td>
     <td><%= book.title %></td><%#タイトルをリンク化%>
     <td><%= book.opinion %></td>
   </tr>
   <% end %>

  </tbody>
</table>



<%= render 'users/info', user: @user %>

<%= render 'books/new', book: @book %>