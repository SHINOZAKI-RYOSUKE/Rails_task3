<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>opinion</th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
     
     <td><%= book.title %></td><%#タイトルをリンク化%>
     <td><%= book.opinion %></td>
   </tr>
   <% end %>
   
  </tbody>
</table>
















<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :opinion %>

  <%= f.submit 'Create Book' %>

<% end %>