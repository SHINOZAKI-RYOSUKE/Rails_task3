<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>opinion</th>
    </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
   <tr>
    <%= link_to root_path, class: 'link' do %>
     <td><%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg" %></td>
    <% end %>
     <td><%= link_to book.title,book_path(book.id) %></td>
     <td><%= book.opinion %></td>
   </tr>
   <% end %>

  </tbody>
</table>



<%= render 'users/info', user: @user %>

<%= render 'books/new', book: @book %>