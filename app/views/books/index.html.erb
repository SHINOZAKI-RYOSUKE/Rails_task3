<main>
  <div class="contaner px-5 px-sm-0">
    
    
    <div class="error_explanation">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <% @book.errors.full_messages.each do |message| %>
        <ul>
          <il><%= message %></il>
        </ul>
      <% end %>
    <% end %>
    </div>
    
    
    <div class="row">
      
      <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/new', book: @book %>
      </div>
      
      
      <div class="col-md-8 offset -md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
          <% @books.each do |book| %>
            <tr>
            <%= link_to user_path(book.user.id), class: 'link' do %>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg" %></td>
            <% end %>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
          
        </table>  
      </div>
      
      
    </div>
  </div>
</main>