<h2 class="mt-3">New book</h2>


<%= form_with model:book, local:true do |new| %>
 <div class="form-group">
  <label for="book_title">Title</label>
  <%= new.text_field :title %>
 </div>

 <div class="form-group">
  <label ="book_opinion">Opinion</label>
  <%= new.text_area :body %>
 </div>

 <div class="form-group">
  <%= new.submit 'Create Book', class:"btn btn-success" %>
</div>
<% end %>