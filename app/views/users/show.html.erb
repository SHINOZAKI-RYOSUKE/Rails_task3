<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>title</th>
      <th>opinion</th>
    </tr>
  </thead>

  
   <% @books.each do |book| %>
   
    <%= link_to user_path(@user.id), class: 'link' do %>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg" %>
    <% end %> 
    
    <%= link_to book_path(book.id), class: 'link' do %>
     <%= book.title %>
    <% end %> 
    
     <%= book.body%>
   
   <% end %>

  </tbody>
</table>






<%= render 'users/info', user: @user %>

<%= render 'books/new', book: @book %>