<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
   <% @users.each do |user| %>
   <tr>
     <td><%= user.image_id %></td>
     <td><%= user.name %></td>
     <td>
      <%= link_to "Show",user_path(user)%>
     </td>
   </tr>
   <% end %>
   
  </tbody>
</table>


















<h1>New Book</h1>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :opinion %>

  <%= f.submit 'Create Book' %>

<% end %>
