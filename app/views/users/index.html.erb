<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
   <% @users.each do |user| %>
   <tr>
     <td><%= attachment_image_tag user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpeg" %></td>
     <td><%= user.name %></td>
     <td>
      <%= link_to "Show",user_path(user)%>
     </td>
   </tr>
   <% end %>

  </tbody>
</table>




<%= render 'users/info', user: @user %>

<%= render 'books/new', book: @book %>